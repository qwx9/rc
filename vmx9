#!/bin/rc
rfork n
switch($sysname){
case u27
	if(test -d /net/ether1)
		n=ether1
	if not
		n=ether0
	m=3G
	echo scroll >/dev/wctl
	vmx \
		-M $m \
		-n $n \
		-d /tmp/iso/9front-6977.c7e7268b0786.iso \
		-d /dev/sdE3/data \
		-v 1024x768 \
		$bootfile \
		'user=glenda mouseport=ps2'
	echo quit >'#X'/0/ctl
case *
	echo nope.
}
