#!/bin/rc
rfork ne

. /tmp/sizes.$sysname
m=t490sw
w=tcp!$m!17060
root=/n/ssh
wdir=$root/p/tsfs/software

sshfs $w || exit
cd $wdir
unmount /mnt/plumb
plumbsrv=()
plumber -s plumb.$pid
f=(`{walk src | grep \.rs} ../../^(rs.notes todo))

cat <<! >/tmp/work.$pid
#!/bin/rc
#window -r $bcmdrect -scroll
#window -r $bsamrect 'echo 4 >/env/tabstop; jam -i $f'
#window -r $duckrect tx $m
window -r $bsamrect jam $f
window -r 554 742 1194 -scroll
window -r 4 4 783 1178 tx $m
!
chmod +x /tmp/work.$pid
bof -i /tmp/work.$pid
rm /tmp/work.$pid

unmount /n/ssh
unmount /mnt/plumb
rm /srv/plumb.$pid
