#!/bin/rc
rfork ne

. /tmp/sizes.$sysname
unmount /mnt/plumb
plumbsrv=()
plumber -s plumb.$pid

cat <<! >/tmp/work.$pid
#!/bin/rc
label monitoring
window -r $ffvncrect v kekw
window -r $duckrect tx hsw
#window -r $cmdrect tx t30
window -r $cmdrect tx kekw
!
chmod +x /tmp/work.$pid
bof -i /tmp/work.$pid
rm /tmp/work.$pid

unmount /mnt/plumb
rm /srv/plumb.$pid
