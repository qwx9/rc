#!/bin/rc -e
rfork n
if(! ~ $#* 2){
	echo usage: $0 mbox upasname >[1=2]
	exit usage
}
unmount /mnt/plumb
plumbsrv=()
plumber -s plumb.$pid
upas/fs -f $1 >>[2]/tmp/mailrio.log || exit
upasname=$2
wsz=`{read -c 48 /mnt/wsys/wctl}
facerect=( \
	0 \
	0 \
	`{echo $wsz(3) - $wsz(1) | pc -n} \
	116 \
)
cat <<! >/tmp/mailrio.$pid
#!/bin/rc
window -r $facerect faces -i
!
chmod +x /tmp/mailrio.$pid
rio -i /tmp/mailrio.$pid
rm /tmp/mailrio.$pid
unmount /mail/fs
unmount /mnt/plumb
rm /srv/plumb.$pid
