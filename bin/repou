#!/bin/rc
# giturl\tname\tdir\tdesc
scrl
awk '
BEGIN{
	FS="\t"
}$1 !~ /^(#|$)/{
	print $2
	basedir = $3
	sub("/[^/]+$", "", basedir)
	# yikes
	if(system("test -d " $3) != 0){
		print "creating repo " $2 " at " $3
		system("mkdir -p " basedir)
		system("git/clone " $1 " " $3)
	}else{
		system("rc -c \''cd " $3 "; git/pull\''")
	}
}
' $home/p/lib/^(plan9 unix)
